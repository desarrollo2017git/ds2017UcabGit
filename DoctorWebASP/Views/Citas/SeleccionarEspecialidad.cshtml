
@{
    ViewBag.Title = "SeleccionarEspecialidad";
}


<section class="content-header">
    <h1>
        Cita Medica
        <small>Solicitud de Cita</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cita</a></li>
        <li class="active">Solicitar Cita</li>
    </ol>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Seleccione el medico que desea para su consulta medica</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="box-body">

                    <input type="hidden" name="CentroMedicoId" id="CentroMedicoId" value="@ViewBag.CentroMedicoId" />

                    <div class="form-group">
                        @Html.Label("Medicos Disponibles", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("EspecialidadMedica", ViewBag.EspecialidadesMedicas as SelectList, htmlAttributes: new { size = 7, @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Seleccionar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts{


}
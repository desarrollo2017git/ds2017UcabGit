@model IEnumerable<DoctorWebASP.Models.Paciente>

@{
    ViewBag.Title = "Lista de Pacientes";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Paciente", "Create")
    @using (Html.BeginForm())
    {
        @Html.TextBox("tCedula", null, new { htmlAttributes = new { @class = "form-control" } })
        if (ViewBag.MensajeError
             != null)
        {
            <br />
            <font color="red">@ViewBag.MensajeError</font>
            <br />
        }
        <input type="submit" value="Buscar Paciente" class="btn btn-default" />
    }
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.PersonaId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.PersonaId })
            </td>
        </tr>
    }

</table>

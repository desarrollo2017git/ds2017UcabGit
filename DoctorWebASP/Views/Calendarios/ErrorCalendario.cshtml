@model DoctorWebASP.ViewModels.SadFaceViewModel
@{
    ViewBag.Title = "ErrorCalendario";
    ViewBag.Message = "Error Inesperado";
}

<section class="content-header">
    <h1>
        Calendario
        <small>Nuevo mensaje</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Calendario</a></li>
        <li class="active">Mensaje</li>
    </ol>
</section>

<section class="content">
    <div class="box box-danger">
        <div class="box-body">
            <div class="box-header with-border">
                <h3 class="box-title">Mensaje</h3>
            </div>
            <div class="row"></div>
            <div class="col-md-4"></div>
            <div class="col-md-4" align="center">
                <h2>Mensaje: </h2>
                <h1>@Html.DisplayFor(m => m.Mensaje)</h1>
                <input type="button" class="btn btn-primary col-md-offset-1" onclick='history.back();' value='Regresar' />
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</section>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")


}
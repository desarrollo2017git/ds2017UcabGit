@model DoctorWebASP.Models.Calendario

@{
    ViewBag.Title = "Eliminar Calendario";
}

<h2>Eliminar espacio de calendario para consulta</h2>

<section class="content">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <div class="box box-solid box-primary">

                <div class="box-header with-border">
                    <h4 class="box-title">Calendario</h4>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <br/>
                            @Html.Label("Id: ", htmlAttributes: new { @class = "control-label col-md-offset-4"})
                            @Html.TextBoxFor(m => m.CalendarioId , new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.CalendarioId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3">
                                <input type="submit" value="Eliminar" class="btn btn-danger" />
                                <a href="listaCalendario"><input type="button" class="btn btn-primary col-md-offset-1" value="Ver tabla" /></a>
                                <a href="Index"><input type="button" class="btn btn-primary col-md-offset-1" value="Regresar" /></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
